<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_medium_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <TextView
        android:id="@+id/tvRecommend"
        android:text="Recommended"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_regular_3x"
        android:fontFamily="@font/chivo_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPopularMovies"
        android:layout_below="@id/tvRecommend"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tvUpCommingMovie"
        android:text="Upcomming Movies"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_below="@id/rvPopularMovies"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/text_regular_3x"
        android:fontFamily="@font/chivo_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUpcommingMovies"
        android:paddingEnd="@dimen/margin_medium_2"
        android:clipToPadding="false"
        android:layout_below="@id/tvUpCommingMovie"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>