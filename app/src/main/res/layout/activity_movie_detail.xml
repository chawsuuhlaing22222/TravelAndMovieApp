<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codico.movieandtravelapp.activities.MovieDetailActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/flMovieCover"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:elevation="@dimen/margin_medium_2"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_margin="@dimen/margin_medium_2"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMovieCoverInDetail"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/placeholder_wolverine_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvMovieTitleDetail"
        android:text="Gonw with The Wind"
        android:textSize="@dimen/text_regular_3x"
        android:textColor="@color/colorSecondaryText"
        android:fontFamily="@font/chivo_bold"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_below="@id/flMovieCover"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvMovieProducedDate"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/colorGrey"
        android:text="UA|Nov 22,2019"
        android:fontFamily="@font/chivo_bold"
        android:layout_marginTop="@dimen/margin_small_n"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_below="@id/tvMovieTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLoveDetail"
        android:scaleType="centerCrop"
        android:tint="@color/colorGrey"
        app:srcCompat="@drawable/ic_baseline_favorite_24"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_xxlarge"
      android:layout_toEndOf="@id/tvMovieTitleDetail"
        android:layout_below="@id/flMovieCover"
        android:layout_width="@dimen/dimen_25"
        android:layout_height="@dimen/dimen_25"/>

    <TextView
        android:id="@+id/tvLoveCountDetail"
        android:layout_below="@id/flMovieCover"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:layout_alignParentEnd="true"
        android:text="20%"
        android:textSize="@dimen/text_regular_2x"
        android:fontFamily="@font/chivo_bold"
        android:textColor="@color/colorGrey"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_toEndOf="@id/ivLoveDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvVoteCountDetail"
        android:layout_below="@id/ivLoveDetail"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:layout_alignParentEnd="true"
        android:text="1,200 votes"
        android:textSize="@dimen/text_regular"
        android:fontFamily="@font/chivo_bold"
        android:textColor="@color/colorGrey"
        android:layout_marginTop="@dimen/margin_small_n"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_toEndOf="@id/ivLoveDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvMovieDuration"
        android:layout_below="@id/tvVoteCountDetail"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="1hr 23min | Drama, Fantasty"
        android:textSize="@dimen/text_regular"
        android:fontFamily="@font/chivo_bold"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvlanguageDetail"
        android:layout_below="@id/tvVoteCountDetail"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_toStartOf="@id/tv2DDetail"
        android:text="English"
        android:textSize="@dimen/text_regular"
        android:fontFamily="@font/chivo_bold"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv2DDetail"
        android:layout_below="@id/tvVoteCountDetail"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:layout_alignParentEnd="true"
        android:text="2D"
        android:textSize="@dimen/text_regular"
        android:fontFamily="@font/chivo_bold"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_toEndOf="@id/ivLoveDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblMovieOverview"
        android:layout_below="@id/tvMovieDuration"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="Movie Description"
        android:textSize="@dimen/text_regular"
        android:fontFamily="@font/chivo_bold"
        android:textColor="@color/colorGrey"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvMovieOverview"
        android:layout_below="@id/lblMovieOverview"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:text="Movie Description"
        android:textSize="@dimen/text_regular"
        android:fontFamily="@font/chivo_light"
        android:textColor="@color/colorGrey"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tvCast"
        android:layout_below="@id/tvMovieOverview"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="Cast"
        android:textSize="@dimen/text_regular"
        android:fontFamily="@font/chivo_bold"
        android:textColor="@color/colorGrey"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCasts"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_below="@id/tvCast"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tvBookTicket"
        android:layout_below="@id/rvCasts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="Book Tickets"
        android:textSize="@dimen/text_regular_3x"
        android:fontFamily="@font/chivo_bold"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</androidx.core.widget.NestedScrollView>